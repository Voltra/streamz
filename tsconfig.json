{
	"compilerOptions": {
		"module": "ES6",
		"target": "es6",
		"lib": [
			"DOM",
			"ESNext"
		],
		"sourceMap": true,
		"sourceRoot": "./src",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"downlevelIteration": true,
		"strict": true,
		"strictNullChecks": true,
		"baseUrl": "./src",
		"outDir": "./esm",
		"declarationDir": "./types",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
}